@page "/login"
@layout LoginLayout
@rendermode InteractiveServer

<PageTitle>Sign in to SHOKAI</PageTitle>

<div class="login-modal-container">
    <div class="login-modal-box">
        @* Left Section - Purple Gradient *@
        <div class="login-modal-left">
            <div class="login-left-content">
                <img src="/assets/shokai-wh-logo.svg" alt="Shokai Logo" class="s-logo" />
                <p class="login-brand-tagline">The Global Referral Platform</p>
                <div class="login-welcome-section">
                    <h2 class="login-welcome-title">Welcome Back!</h2>
                    <p class="login-welcome-text">Sign in to access your account and continue your referral journey.</p>
                </div>
            </div>
        </div>

        @* Right Section - Login Form *@
        <div class="login-modal-right">
            @* Close Button *@
            <button type="button" class="login-close-btn" @onclick="GoBack" aria-label="Close">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
            
            <div class="login-form-content">
                <h2 class="login-form-title">Sign in to access your account</h2>
                
                <EditForm Model="Model" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Email</label>
                        <div class="input-wrapper">
                            <span class="input-icon">âœ‰</span>
                            <InputText class="form-control login-input" @bind-Value="Model.Email" placeholder="Enter your email" />
                        </div>
                        <ValidationMessage For="@(() => Model.Email)" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-wrapper">
                            <span class="input-icon">ðŸ”’</span>
                            <InputText class="form-control login-input" InputType="InputType.Password" @bind-Value="Model.Password" placeholder="Enter your password" />
                        </div>
                        <ValidationMessage For="@(() => Model.Password)" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                        <a href="#" class="forgot-password-link">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-proceed w-100 mb-4">
                        Proceed
                    </button>
                </EditForm>

                <div class="login-divider mb-4">
                    <span>or</span>
                </div>

                <div class="social-login mb-4">
                    <button type="button" class="btn btn-social-login w-100 mb-2">
                         <img src="/assets/gogle-logo1.svg" alt="google-logo" class="google-logo" /> Continue with Google
                    </button>
                    <!-- <button type="button" class="btn btn-social-login w-100">
                        <span class="social-icon">ðŸ”µ</span> Continue with LinkedIn
                    </button> -->
                </div>

                <div class="login-footer text-center">
                    <p class="mb-0">
                        Don't have an account? <a href="#" class="signup-link">Sign up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel Model { get; set; } = new();

    private Task HandleLogin()
    {
        // TODO: wire up real auth later
        // For now, just navigate to home
        NavigationManager.NavigateTo("/");
        return Task.CompletedTask;
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/");
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private sealed class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;
    }
}

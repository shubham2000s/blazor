@* FAQ Section *@
<section class="faq-section">
    <div class="container dis-row gap-70 a-item-start mb-col-reverse">

    <div class="col-lg-4 col-md-6 p-sticky">
        <img src="assets/faq-img.png" alt="Recommended Professional Roles" class="cta-banner-img" />
    </div>
    
    <div class="col-lg-6 col-md-6">
        <div class="faq-header">
            <span class="faq-pill">Frequently Asked</span>
            <h2 class="faq-title w-600">Frequently Asked Questions</h2>
        </div>

        <div class="faq-list">
            @foreach (var faq in faqItems)
            {
                var isOpen = expandedFaq == faq.Id;
                <div class="faq-item @(isOpen ? "faq-item-active" : "")">
                    <button type="button" 
                            class="faq-question" 
                            aria-expanded="@isOpen.ToString().ToLower()"
                            @onclick="() => ToggleFaq(faq.Id)">
                        <span class="faq-question-text h-18 w-500">@faq.Question</span>
                        <span class="faq-icon @(isOpen ? "faq-icon-active" : "")">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="8" y1="12" x2="16" y2="12"/>
                                <line x1="12" y1="8" x2="12" y2="16" class="faq-plus-line"/>
                            </svg>
                        </span>
                    </button>
                    <div class="faq-answer @(isOpen ? "faq-answer-open" : "")" aria-hidden="@(!isOpen).ToString().ToLower()">
                        <p class="h-16 w-400">@faq.Answer</p>
                    </div>
                </div>
            }
        </div>
    </div>


    </div>
</section>


@* CTA Section *@
<AppDownloadCta />

@code {
    private string selectedRole = string.Empty;
    private int? expandedFaq = 1; // First FAQ open by default

    private List<FaqItem> faqItems = new()
    {
        new FaqItem(1, "Who can become a Referrer?", "Anyone with a strong professional network recruiters, specialists, consultants, or working professionals can become a referrer and recommend suitable candidates."),
        new FaqItem(2, "How does the referral bonus work?", "The hiring company sets the bonus amount for each job. Referrers earn the bonus when their referred candidate successfully completes the hiring process."),
        new FaqItem(3, "How are candidates shortlisted?", "Shokai uses AI to evaluate CVs based on job requirements and KRAs, helping hirers quickly identify the most relevant candidates."),
        new FaqItem(4, "Can I refer someone who is not on Shokai?", "Yes. Referrers can invite candidates from their personal network even if they are not already registered on the platform."),
        new FaqItem(5, "Will referrers be able to track their referrals?", "Yes. Referrers get full visibility into the hiring progress, including interview stages and final outcomes."),
        new FaqItem(6, "How do candidates benefit from Shokai?", "Candidates get access to better opportunities through trusted referrals, leading to faster interviews and higher chances of selection.")
    };

    private void ToggleFaq(int faqId)
    {
        expandedFaq = expandedFaq == faqId ? null : faqId;
    }

    private record FaqItem(int Id, string Question, string Answer);

    private void HandleGetStarted()
    {
        if (string.IsNullOrEmpty(selectedRole))
            return;

        var route = selectedRole switch
        {
            "hirer" => "/hirer/hirer-home",
            "referrer" => "/referrer/referrer-home",
            "networker" => "/networker/networker-home",
            _ => "/"
        };

        NavigationManager.NavigateTo(route);
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
